[Unit]
Description=Kernel Device Manager
DefaultDependencies=no
Wants=systemd-deviced.socket
After=systemd-deviced.socket systemd-udev-hwdb-update.service systemd-sysusers.service
Before=sysinit.target
ConditionPathIsReadWrite=/sys

[Service]
Type=notify
OOMScoreAdjust=-1000
Restart=always
RestartSec=0
ExecStart=@rootlibexecdir@/systemd-deviced
MountFlags=slave
