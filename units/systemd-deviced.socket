[Unit]
Description=Device Kernel Socket
DefaultDependencies=no
Before=sockets.target
ConditionPathIsReadWrite=/sys

[Socket]
ReceiveBuffer=128M
ListenNetlink=kobject-uevent 1
PassCredentials=yes
